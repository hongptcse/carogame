<div class="mt-4" scroll="auto">
    <div class="container">
            <div class="container" style="align-items: left;">
                <p class="lead">
                    Room Id: <span id="roomId">{{data.room}}</span>
                    <br/>
                    Players: <span id="players" name="username">{{data.username}}</span>
                </p>
                
            </div>
    </div>
    <div class="split-left left">
        <div id="caro-board" style="height: 100%;">
            <h2>CARO BOARD 15x15</h2>
        </div>
    </div>

    <div class="split-right right">
        <div class="chat-container" style="height: 100%; width: 100%;">
            <div style="height: 80%; width: 100%;">
                <header style="background-color: #93c3cf; height: 5%;">
                    <span style="margin-left: 10px; font-size: medium; font-weight: bold;">Top Chat:</span>
                </header>
                <main class="chat-main" style="height: 80%; width: 100%;">
                    <div class="chat-messages" style="height: 100%; width: 100%;"></div>
                </main>
            </div>
    
            <div class="chat-form-container" style="height: 80%;">
                <form id="chat-form">
                    <input id="msg" type="text" placeholder="Enter Message" required autocomplete="off" />
                    <button class="btn"> Send</button>
                </form>
            </div>
        </div>
    </div>
</div>



