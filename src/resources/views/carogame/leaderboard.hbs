<div class="card" style="width: auto; height: auto; font-size: large; margin-top: 10px; text-align: center;">
    <img class="card-img-top" style="height: 250px; width: 500px; margin-left: auto; margin-right: auto;" src="/img/lb.png" alt="Leaderboard">
    <div class="card-body">
        <h5 class="card-title"></h5>
        <p class="card-text">
            {{!-- <a href="#" class="btn btn-primary"></a> --}}
        <ul class="list-group">
            {{#each users}}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{this.username}}
                <span class="badge badge-primary badge-pill">{{this.score}} <span class="oi oi-star"></span></span>
            </li>
            {{/each}}
        </ul>
        </p>
    </div>
</div>